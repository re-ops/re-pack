{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "volume_size": "50",
    "ami":"ami-9f388eec", 
    "region":"eu-west-1",
    "s3cmd_access_key":"",
    "s3cmd_secret_key":"",
    "s3cmd_gpg_key":"",
    "instance_type":"m3.medium"
  },

  "provisioners": [
    {"type": "shell",
     "environment_vars": [
       "ACCESS_KEY={{user `s3cmd_access_key`}}",
       "SECRET_KEY={{user `s3cmd_secret_key`}}",
       "GPG_PASSPHRASE={{user `s3cmd_gpg_key`}}"
     ],
     "override": {
        "amazon-ebs": {
          "scripts" : [
            "scripts/puppet.sh", 
            "scripts/s3cmd.sh"
          ]
        }
     }
    }
  ],

  "builders": [{
    "type": "amazon-ebs",
    "associate_public_ip_address": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "ubuntu-15.04_puppet-3.8.2_{{timestamp}}", 
    "ami_block_device_mappings": [ {
            "device_name": "/dev/sda1",
            "volume_size": "{{user `volume_size`}}",
            "delete_on_termination": true
     }],
    "launch_block_device_mappings": [ {
            "device_name": "/dev/sda1",
            "volume_size": "{{user `volume_size`}}",
            "delete_on_termination": true
     }]
  }]
}
