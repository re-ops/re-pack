{
  "variables": {
    "s3cmd_access_key":"",
    "s3cmd_secret_key":"",
    "s3cmd_gpg_key":""
  },
  "builders": [
    {
     "type": "digitalocean",
     "api_token": "{{user `api_token`}}",
     "image": "ubuntu-15-10-x64",
     "region": "lon1",
     "size": "512mb"
    }
   ],
 "provisioners": [
    {
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/puppet.sh",
        "scripts/sshd.sh",
	  "scripts/s3cmd.sh"
      ],
     "environment_vars": [
       "ACCESS_KEY={{user `s3cmd_access_key`}}",
       "SECRET_KEY={{user `s3cmd_secret_key`}}",
       "GPG_PASSPHRASE={{user `s3cmd_gpg_key`}}"
     ],
     "type": "shell"
    }
  ]

}
