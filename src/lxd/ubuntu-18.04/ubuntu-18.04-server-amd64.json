{
   "variables": {
   },
   "builders":
    [
        {
            "output_image": "ubuntu-18.04.2_corretto-8",
            "type": "lxd",
		"image":"ubuntu:18.04",
		"init_sleep":"5"
        }
    ],

    "provisioners": [
      {
         "type": "shell",
         "inline": ["mkdir /home/{{user `user`}}/.ssh -p"]
      }, {
	  "type": "file",
        "source": "http/authorized_keys",
        "destination": "/home/{{user `user`}}/.ssh/authorized_keys"
      } , {
	  "type": "file",
        "source": "http/re-ops",
        "destination": "/tmp/re-ops"
       } , {
         "type": "shell",
         "scripts": [
           "scripts/mirror.sh",
	     "scripts/update.sh",
	     "scripts/java.sh",
	     "scripts/re-ops.sh"
	   ]
     }]
}
